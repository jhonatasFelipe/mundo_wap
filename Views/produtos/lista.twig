
{{ include ("head.twig") }}
{{ param }}
<div class="container mt-5 mb-5">
    {{ include("produtos/selecao_de_arquivo.twig")}}
<table class="table table-striped ">
    <thead>
        <tr class="table-dark ">
            <th> AÇÃO </th>
            <th> EAN </th>
            <th> NOME PRODUTO </th>
            <th> PREÇO </th>
            <th> ESTOQUE </th>
            <th> DATA FABRICAÇÃO </th>
        </tr>
    </thead>
    <tbody>
    {% for produto in produtos %}
        <tr>
            <td> <a href="/deletaproduto/{{produto["EAN"]}}"><button type="submit" class="btn btn-danger btn-sm">Remover</button></a></td>
            <td>{{ produto["EAN"]}} </td>
            <td> {{ produto["nome"]}} </td>
            <td> {{ produto["preco"]}} </td>
            <td> {{ produto["estoque"]}} </td>
            {% if produto["fabricacao"]== "" %}
            <td></td>
            {% else %}
            <td> {{ produto["fabricacao"] | date("d/m/Y")}}</td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="6">
                <h4> Não há registros de produtos </h4>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{{ include("rodape.twig") }}